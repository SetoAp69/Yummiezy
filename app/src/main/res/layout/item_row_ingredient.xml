<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_ingredient_bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.body"
        android:text="@string/number_bullet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_ingredient_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.body"
        app:layout_constraintStart_toEndOf="@id/tv_ingredient_bullet"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_ingredient_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toEndOf="@+id/tv_ingredient_amount"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="amount of Ingredient" />

</androidx.constraintlayout.widget.ConstraintLayout>